{
  /* debug environment for development */
  "DEBUG": {
    "InputPath": "C:\\TomatoSoup\\jconnelly-dev\\MTG-Proxy-App\\Uploads",
    "OutputPath": "C:\\TomatoSoup\\jconnelly-dev\\MTG-Proxy-App\\PDF",
    "DownloadPath": "C:\\TomatoSoup\\jconnelly-dev\\MTG-Proxy-App\\Images",
    "MaxUploadFileByteSize": 268435456
  },

  /* production environment for release */
  "PROD": {
    "InputPath": "C:\\TomatoSoup\\jconnelly-dev\\MTG-Proxy-App\\Uploads",
    "OutputPath": "C:\\TomatoSoup\\jconnelly-dev\\MTG-Proxy-App\\PDF",
    "DownloadPath": "C:\\TomatoSoup\\jconnelly-dev\\MTG-Proxy-App\\Images",
    "MaxUploadFileByteSize": 268435456
  },

  /* this applications source of mtg content */
  "WizardsOfTheCoast_API_Settings": {
    "Domain": "https://api.magicthegathering.io",
    "Version": "v1",
    "Resource": "cards",
    "RequestTimeoutSeconds": 3600
  },

  /* logging configurations */
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "C:\\TomatoSoup\\jconnelly-dev\\MTG-Proxy-App\\Logs\\ProxyAPI-{Date}.log",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}",
          "fileSizeLimitBytes": 5000,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 3,
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "Application": "ProxyAPI"
    }
  },

  /* security */
  "AllowedHosts": "*"
}